<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="220dp"
    android:layout_height="400dp"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/history_zu"
    >

    <LinearLayout
        android:id="@+id/Layout_image"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_marginTop="19dp"
        android:layout_centerHorizontal="true">
    <ImageView
        android:id="@+id/image"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:background="#ffffff"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv1"
        android:layout_below="@+id/linearLayout_price"
        android:layout_width="190dp"
        android:layout_height="2dp"
        android:src="@drawable/history_hx"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/linearLayout_weight"
            android:orientation="horizontal"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jhl"
                android:text="净含量:"
                android:textColor="@color/assistColor_black"
                android:textSize="14sp"
                android:layout_marginLeft="42dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight"
                android:text="104g/罐"
                android:textSize="14sp"
                android:textColor="@color/assistColor_black"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/production_date"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="2017.3.14"
        android:textColor="@color/assistColor_black"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="至"
        android:textColor="@color/assistColor_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storage_life"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="2018.3.14"
        android:textColor="@color/assistColor_black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_name"
        android:orientation="vertical"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/Layout_image"
        android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/assistColor_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/assistColor_black"
        android:textSize="14sp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_price"
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_below="@+id/linearLayout_name"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:id="@+id/rmb"
            android:textColor="@color/adornColor"
            android:textSize="15sp"
            android:layout_marginLeft="60dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:text="8.20"
            android:textColor="@color/adornColor"
            android:textSize="15sp"/>
    </LinearLayout>


</RelativeLayout>