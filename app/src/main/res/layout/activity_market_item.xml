<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_poi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/cardview_light_background">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_poi_photo"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tv_poi_title"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="武商量贩"
        android:textColor="@color/contents_text"
        android:textSize="14sp"
        card_view:layout_constraintLeft_toRightOf="@+id/iv_poi_photo"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_poi_rating_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="评分："
        android:textSize="12sp"
        card_view:layout_constraintLeft_toRightOf="@+id/iv_poi_photo"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_poi_title" />

    <TextView
        android:id="@+id/tv_poi_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:text="雄楚大道九龙大酒店1楼"
        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="@+id/iv_poi_photo"
        card_view:layout_constraintLeft_toRightOf="@+id/iv_poi_photo" />

    <TextView
        android:id="@+id/tv_poi_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="2dp"
        android:text="305"
        card_view:layout_constraintBottom_toBottomOf="@+id/iv_poi_photo"
        card_view:layout_constraintLeft_toRightOf="@+id/tv_poi_address" />

    <TextView
        android:id="@+id/tv_poi_distance_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:text="m"
        card_view:layout_constraintBottom_toBottomOf="@+id/iv_poi_photo"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintLeft_toRightOf="@+id/tv_poi_distance"
        card_view:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_poi_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="3.5"
        android:textColor="@color/adornColor"
        card_view:layout_constraintLeft_toRightOf="@+id/tv_poi_rating_pre"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_poi_title" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_toggle_btn"
        android:text="ToggleButton"
        android:textOff=" "
        android:textOn=" "
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

